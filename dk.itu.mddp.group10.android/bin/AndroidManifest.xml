<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smdp.surveytoandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smdp.surveytoandroid.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Entry for QuestionActivity -->
        <activity
            android:name="com.smdp.surveytoandroid.QuestionActivity"
            android:label="Question Activity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
                <!-- Entry for ResultActivity -->
        <activity
            android:name="com.smdp.surveytoandroid.ResultActivity"
            android:label="Result Activity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>